<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>ParaMed</title>

    <link rel="stylesheet" href="../public/stylesheets/style.css">

    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="/controllers/homepage.js"></script>
</head>

<body>
<div class="navBar">
  <a class="navLink" href="about">About</a>
  <a class="navLink" href="sign-up">Sign up</a>
  <div id="teamName">
    A Bright Solutions project
  </div>
</div>

<div class="home">

    <%# In the event of an invalid login, display error box when rendering page #%>
    <% if(typeof invalidLogin != 'undefined') { %>
        <div id="errorBox" class="modal">
            <div class="modal-box">
                <div class="modal-content">
                    <p>Invalid username or password. Please try again.</p>
                    <button id="buttonOkay">Okay</button>
                </div>
            </div>
        </div>
    <% } %>

    <img id="logo" src="../public/logo.png" alt="ParaMed logo">

    <form class="login" method="post" action="reports">
        <label class="loginText" for="username">Username</label><br>
        <input id="username" type="text" name="username" required><br>


        <label class="loginText" for="password">Password</label><br>
        <input id="password" type="password" name="password" required><br>

        <button type="submit">Login</button><br>
        <div id="appDownload">
          Not a call operator? Download our <a id="appLink" href="https://play.google.com/store/apps/details?id=com.brightsolutions.paramed" target="_blank">app</a>!
        </div>
    </form>
</div>
</body>